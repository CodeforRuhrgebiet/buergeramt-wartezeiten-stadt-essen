{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "config.yml",
      "Gemfile",
      "Gemfile.lock",
      "lib/**",
      "run.rb"
    ]
  }
}
